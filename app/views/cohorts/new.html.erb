<h1>Create Cohort</h1>

<%= form_for(@cohort) do |f|%>

<p><%= f.label :name, "Cohort Name"%> <br>
  <%= f.text_field :name%></p>

<p><%= f.label :start_date, "Start Date"%> <br>
  <%= f.date_field :start_date%></p>

<p><%= f.label :end_date, "End Date"%> <br>
  <%= f.date_field :end_date%></p>

<p><%= f.label :course, "Select Course"%> <br>
  <%= f.select(:course, Course.all.collect{ |cr|
                                              [cr.id]
                                              },{include_blank: true })%>
</p>

<p><%= f.label :instructor, "Select Instructor"%> <br>
  <%= f.select(:instructor, Instructor.all.collect{ |inst|
                                              [inst.id]
                                              },{include_blank: true })%>
</p>

<p>
  <%= f.collection_check_boxes :student_ids, Student.all, :id, :first_name do |st| %>
  <%= st.check_box %>
  <%= st.label %>
  <%end%>
</p>

<p>
  <%= f.submit "Create Cohort" %>
</p>

<%end%>

<br><br>
<%= link_to 'Home', root_path %>
