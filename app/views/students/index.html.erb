<body id="student">
<h1>Students</h1>

<ol>
  <%@student.each do |st|%>
  <li>
    Full Name: &nbsp <%=st.last_name%>,  <%=st.first_name%> &nbsp
    Age: &nbsp <%=st.age%> &nbsp
    Education: &nbsp <%=st.education%> &nbsp
    <%= link_to 'Info',  admin_student_path(session[:user_id], st)%> &nbsp
    <%= link_to 'Edit',  edit_admin_student_path(session[:user_id], st)%> &nbsp
    <%= link_to "Delete", admin_student_path(session[:user_id], st), remote: true, method: :delete, data: { confirm: 'Are you sure?'}, class: 'delete-item'%>
  </li>

  <%end%>
</ol>

</body>
