<div class="forms">
  <div class="forms-grid">
    <div>
      <h1 class="center">Edit <%=@student.last_name%>'s Profile</h1>

      <%= form_for([@admin, @student]) do |f|%>

      <p><%= f.label :first_name, "First Name"%> <br>
        <%= f.text_field :first_name%></p>

        <p><%= f.label :last_name, "Last Name"%> <br>
          <%= f.text_field :last_name%></p>

          <p><%= f.label :age%> <br>
            <%= f.number_field :age%></p>

            <p><%= f.label :education%> <br>
              <%= f.select :education, ["Highschool Diploma", "Bachelor's Degree", "Master's Degree", "Ph.D"], :include_blank => true %></p>

              <p class="center">
                <%= f.submit "Update Information", class: "btn btn-account"%>
              </p>
              <%end%>

          <div class="center">
              <a class="icons" href="<%= admin_students_path%>">
                <img src="https://img.icons8.com/bubbles/500/000000/restart.png">
              </a>

              <a class="icons" href="<%= root_path%>">
                <img src="https://img.icons8.com/bubbles/500/000000/home.png">
              </a>
            </div>
    </div>
  </div>
</div>
