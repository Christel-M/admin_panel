<body id="profile">
<h2>Edit Profile</h2>

<% if @admin.errors.any? %>
  <% @admin.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%=form_for(@admin) do |f|%>
<p><%= f.label :first_name, "First Name"%> <br>
  <%= f.text_field :first_name%></p>

<p><%= f.label :last_name, "Last Name"%> <br>
  <%= f.text_field :last_name%></p>

<p><%= f.label :email%> <br>
<%= f.email_field :email%></p>

<p><%= f.label :password, "Password"%> <br>
  <%= f.password_field :password %></p>

<p><%= f.label :avatar%> <br>
  <%= f.file_field :avatar, direct_upload: true %>
</p>

<p>
  <%= f.submit "Update Information" %>
</p>

<%end%>
</body>
