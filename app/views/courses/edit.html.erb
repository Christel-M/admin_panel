<%if logged_in?%>
<div class="forms">
  <div class="forms-grid">
    <div>
      <h1 class="center">Edit Course: <%=@course.name%></h1>

      <%= form_for([@admin, @course]) do |f|%>

      <p><%= f.label :name, "Course Name"%> <br>
        <%= f.text_field :name%></p>

        <p><%= f.label :class_hours, "Class Hours"%> <br>
          <%= f.number_field :class_hours%></p>

          <p class="center">
            <%= f.submit "Update Information", class: "btn btn-account"%>
          </p>

          <%end%>
          <div class="center">
            <a class="icons" href="<%= admin_courses_path%>">
              <img src="https://img.icons8.com/bubbles/500/000000/restart.png">
            </a>

            <a class="icons" href="<%= root_path%>">
              <img src="https://img.icons8.com/bubbles/500/000000/home.png">
            </a>
          </div>
    </div>
  </div>
</div>
<%end%>
